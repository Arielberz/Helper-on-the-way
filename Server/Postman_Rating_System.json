{
  "info": {
    "name": "Helper-on-the-way Rating System API",
    "description": "Complete Postman collection for testing the Rating System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "request_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "rating_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "helper_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    pm.collectionVariables.set('user_id', jsonData.data.user.id);",
                  "    console.log('Token saved:', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+972501234567\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            },
            "description": "Register a new user and get authentication token"
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    pm.collectionVariables.set('user_id', jsonData.data.user.id);",
                  "    console.log('Token saved:', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/login",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login"]
            },
            "description": "Login with existing user credentials"
          }
        },
        {
          "name": "Register Helper",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('helper_id', jsonData.data.user.id);",
                  "    console.log('Helper ID saved:', jsonData.data.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"helperuser\",\n  \"email\": \"helper@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+972509876543\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            },
            "description": "Register a helper user for testing ratings"
          }
        }
      ]
    },
    {
      "name": "Ratings",
      "item": [
        {
          "name": "Create Rating",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('rating_id', jsonData.data._id);",
                  "    console.log('Rating ID saved:', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requestId\": \"{{request_id}}\",\n  \"score\": 5,\n  \"review\": \"Excellent helper! Very professional and arrived quickly. Highly recommended!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings"]
            },
            "description": "Create a new rating for a completed request. Replace {{request_id}} with actual request ID."
          }
        },
        {
          "name": "Create Rating (4 stars)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requestId\": \"{{request_id}}\",\n  \"score\": 4,\n  \"review\": \"Good service, helpful person.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings"]
            },
            "description": "Create a rating with 4 stars"
          }
        },
        {
          "name": "Create Rating (No Review)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requestId\": \"{{request_id}}\",\n  \"score\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings"]
            },
            "description": "Create a rating without review text (optional field)"
          }
        },
        {
          "name": "Get Rating by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/ratings/{{rating_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings", "{{rating_id}}"]
            },
            "description": "Get a specific rating by its ID (public endpoint)"
          }
        },
        {
          "name": "Get All Ratings for Helper",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{helper_id}}/ratings?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{helper_id}}", "ratings"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10, max: 100)"
                }
              ]
            },
            "description": "Get all ratings for a specific helper with pagination (public endpoint)"
          }
        },
        {
          "name": "Get Ratings - Page 2",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{helper_id}}/ratings?page=2&limit=5",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{helper_id}}", "ratings"],
              "query": [
                {
                  "key": "page",
                  "value": "2"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            },
            "description": "Get second page with 5 items per page"
          }
        },
        {
          "name": "Update Rating",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"score\": 4,\n  \"review\": \"Updated review: Good service overall, but could be faster.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings/{{rating_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings", "{{rating_id}}"]
            },
            "description": "Update an existing rating (only rating owner can update)"
          }
        },
        {
          "name": "Update Rating Score Only",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"score\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings/{{rating_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings", "{{rating_id}}"]
            },
            "description": "Update only the score, keeping the review unchanged"
          }
        },
        {
          "name": "Delete Rating",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/ratings/{{rating_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings", "{{rating_id}}"]
            },
            "description": "Delete a rating (only rating owner can delete)"
          }
        }
      ]
    },
    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Create Rating - Missing Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requestId\": \"{{request_id}}\",\n  \"score\": 5,\n  \"review\": \"Test\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings"]
            },
            "description": "Should return 401 - Unauthorized"
          }
        },
        {
          "name": "Create Rating - Invalid Score",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requestId\": \"{{request_id}}\",\n  \"score\": 6,\n  \"review\": \"Invalid score\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings"]
            },
            "description": "Should return 400 - Score must be between 1 and 5"
          }
        },
        {
          "name": "Create Rating - Missing Required Fields",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"review\": \"Missing requestId and score\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ratings",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings"]
            },
            "description": "Should return 400 - Missing required fields"
          }
        },
        {
          "name": "Get Rating - Invalid ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/ratings/invalid_id_format",
              "host": ["{{base_url}}"],
              "path": ["api", "ratings", "invalid_id_format"]
            },
            "description": "Should return 404 or 500 - Invalid ID format"
          }
        }
      ]
    }
  ]
}
