# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/helper-on-the-way

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_COOKIE=false

# BCRYPT
BCRYPT_SALT_ROUNDS=10

# CORS
CLIENT_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin Configuration
# Set this to the email address that should have admin privileges
ADMIN_EMAIL=info.helperontheway@gmail.com

# Email Configuration (for email verification and password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# PayPal Configuration (if using)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
